{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "declaration": true,
        "outDir": "./dist/",
        "removeComments": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strict": true,
        "inlineSourceMap": true,
        "lib": ["ES2020", "dom"]
    },
    "include": [
        "src/*.ts"
    ]
}